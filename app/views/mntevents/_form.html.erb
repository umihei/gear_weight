<%= form_with model: @mntevent do |form| %>
    <% if @mntevent.errors.any? %>
        <div>
            <ul>
                <% @mntevent.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div>
        <%= form.label :"山行の名前" %><br>
        <%= form.text_field :eventname %>
    </div>
    <div>
        
        <%= form.label :"山に行った日" %><br>
        <%= form.date_field :eventdate %>
        
    </div>
    <div>
        <%= form.label :"山の名前" %><br>
        <%= form.text_field :mnt %>
    </div>
    <div>
        <%= form.hidden_field :user_id, value: current_user.id %>
        <%= form.submit %>
    </div>
<% end %>

<%= link_to '山行記録一覧に戻る', mntevents_path %>