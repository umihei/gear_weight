<h1><%= current_user.username %>さんのギア一覧</h1>
<table>
    <tr>
        <th>ID</th>
        <th>ギア名</th>
        <th>重さ</th>
    </tr>
    <% @user_gears.each do |gear| %>
    <tr>
        <td><%= gear.id %></td>
        <td><%= gear.name %></td>
        <td><%= gear.weight %></td>
        <td><%= link_to '詳細', gear_path(gear) %></td>
        <td><%= link_to '編集', edit_gear_path(gear) %></td>
        <td><%= link_to '削除', gear_path(gear), data: { turbo_method: 'delete', turbo_confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
</table>

